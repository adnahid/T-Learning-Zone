<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".demoFragment"
    android:background="@drawable/learning"
    >



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/top_bacground"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/secondLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tutorial"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:elevation="5dp"
                            android:backgroundTint="#e0e0f9"
                            tools:context=".MainActivity"
                            android:layout_margin="3dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >


                                <ImageView
                                    android:id="@+id/tutorialImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:src="@drawable/message"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="3dp"
                                    android:padding="15dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="Tutorial"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#9C27B0"
                                    android:layout_marginBottom="10dp"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/newsFeed"
                            android:layout_width="120dp"
                            android:layout_height="160dp"
                            android:elevation="5dp"
                            android:backgroundTint="#e0e0f9"
                            tools:context=".MainActivity"
                            android:layout_margin="3dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >


                                <ImageView
                                    android:id="@+id/newsFeedImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:src="@drawable/message"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="3dp"
                                    android:padding="15dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="News Feed"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#9C27B0"
                                    android:layout_marginBottom="10dp"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/noteBook"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:elevation="5dp"
                                    android:backgroundTint="#e0e0f9"
                                    tools:context=".MainActivity"
                                    android:layout_margin="3dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        >


                                        <ImageView
                                            android:id="@+id/noteBookImage"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:src="@drawable/message"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="3dp"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15sp"
                                            android:text="Note Book"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:textColor="#9C27B0"
                                            android:layout_marginBottom="10dp"
                                            />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/probidhan"
                                    android:layout_width="100dp"
                                    android:layout_height="130dp"
                                    android:elevation="5dp"
                                    android:backgroundTint="#e0e0f9"
                                    tools:context=".MainActivity"
                                    android:layout_margin="3dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        >


                                        <ImageView
                                            android:id="@+id/probidhanImage"
                                            android:layout_width="wrap_content"
                                            android:layout_height="90dp"
                                            android:src="@drawable/message"
                                            android:layout_gravity="center"
                                            android:layout_marginTop="3dp"
                                            android:padding="13dp"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15sp"
                                            android:text="Probidhan"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:textColor="#9C27B0"
                                            android:layout_marginBottom="10dp"
                                            />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >


                                <androidx.cardview.widget.CardView
                                    android:id="@+id/gpa"
                                    android:layout_width="100dp"
                                    android:layout_height="215dp"
                                    android:elevation="5dp"
                                    android:backgroundTint="#e0e0f9"
                                    tools:context=".MainActivity"
                                    android:layout_margin="3dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    >


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        >


                                        <ImageView
                                            android:id="@+id/gpaImage"
                                            android:layout_width="80dp"
                                            android:layout_height="90dp"
                                            android:src="@drawable/message"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="23dp"
                                            android:padding="10dp"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15sp"
                                            android:text="GPA"
                                            android:layout_gravity="center"
                                            android:textStyle="bold"
                                            android:textColor="#9C27B0"
                                            android:layout_marginBottom="10dp"
                                            />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>
                        </LinearLayout>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/institute"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="5dp"
                            android:backgroundTint="#e0e0f9"
                            tools:context=".MainActivity"
                            android:layout_margin="1dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical"
                                >


                                <ImageView
                                    android:id="@+id/instituteImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:src="@drawable/message"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="3dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="Institute"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#9C27B0"
                                    android:layout_marginBottom="10dp"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>






                </LinearLayout>



                <androidx.cardview.widget.CardView
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="8dp"
                    android:layout_below="@id/secondLayout"
                    >

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/image_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iss_auto_cycle="true"
                        app:iss_period="1000"
                        app:iss_delay="0"
                        app:iss_corner_radius="5"
                        app:iss_text_align="CENTER"
                        />
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:id="@+id/endLayout"
                    android:layout_below="@id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:weightSum="4"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bookList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/bookListImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/message"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Book List"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bteb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/btebImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/message"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="BTEB"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tmed"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/tmedImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/message"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text="TMED"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                android:maxLines="1"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/link"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/linkImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/message"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="Important"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/endLayoutTwo"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:weightSum="4"
                    android:layout_below="@id/endLayout"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/skill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/skillImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/message"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="Skill"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                android:maxLines="1"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/admission"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/admissionImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/message"
                                android:padding="5dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Admission"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/update"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >
                            <ImageView
                                android:id="@+id/updateImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/message"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Check Update"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/about"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:elevation="5dp"
                        android:backgroundTint="#ffffff"
                        tools:context=".MainActivity"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/aboutImage"
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/message"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:contentDescription="TODO" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="About"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#9C27B0"
                                android:layout_marginBottom="10dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>





            </RelativeLayout>


        </LinearLayout>
    </ScrollView>





</RelativeLayout>